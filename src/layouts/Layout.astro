---
import "@fontsource-variable/onest";
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Portfolio's Nathalia "}</title>
  </head>
  <body>
    <div class="w-full lg:max-w-7xl">
      <slot />
    </div>
    <!-- <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]"
    >
    </div> -->
  </body>
</html>

<style>
  @reference "@/styles/global.css";

  html {
    scroll-behavior: smooth;
    font-family: "Onest Variable", sans-serif;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    @apply p-4 md:px-10 lg:py-[20px] xl:px-[100px];
  }
</style>
