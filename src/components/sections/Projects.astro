---
import { PROJECTS } from "@/utils/projects";
import { CardProject } from "../molecules";
---

<section id="projects">
  <h2 class="font-roboto mb-2.5 text-center text-3xl font-bold tracking-wide">
    PROYECTOS
  </h2>
  <p class="text-center text-xl tracking-wide text-gray-600">
    Una selección de mis trabajos más recientes y destacados
  </p>
  <div
    class="mt-16 grid grid-cols-[repeat(auto-fill,_minmax(250px,_1fr))] gap-8"
  >
    {PROJECTS.map((project) => <CardProject project={project} />)}
  </div>
</section>
