---
interface Props extends astroHTML.JSX.TextareaHTMLAttributes {
  label: string;
  name: string;
  class?: string;
}
const { class: className, name, label, ...rest } = Astro.props;
---

<div class="flex w-full flex-col">
  {
    label ? (
      <label for={name} class="mb-1 text-sm font-medium">
        {label}
        {rest.required && "*"}
      </label>
    ) : null
  }
  <textarea
    id={name}
    rows={4}
    class:list={[
      "placeholder:text-muted-foreground focus-visible:border-ring focus-visible:border-primary focus-visible:ring-primary/50 aria-invalid:border-destructive flex min-h-16 w-full rounded-md border border-gray-500 bg-transparent px-3 py-2 text-base shadow-xs transition-[color,box-shadow] outline-none focus-visible:ring-[3px] disabled:cursor-not-allowed disabled:opacity-50 md:text-sm",
      className,
    ]}
    name={name}
    {...rest}></textarea>
  <span class="hidden text-sm text-red-600" data-error={name}></span>
</div>
