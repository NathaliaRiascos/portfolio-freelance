---
interface Props {
  label: string;
  desc: string;
}

const { label, desc } = Astro.props;
---

<li class="flex items-center gap-3" aria-label={label}>
  <span
    class="bg-primary block size-10 place-content-center place-items-center rounded-md p-1 text-center text-white"
    aria-hidden="true"
  >
    <slot name="icon" />
  </span>
  <div>
    <span class="text-primary text-base font-medium">{label}</span>
    <span class="block text-sm">{desc}</span>
  </div>
</li>
